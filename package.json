{
  "name": "lorekeeper",
  "private": true,
  "version": "0.1.0",
  "description": "Lore Keeper by Omega Technologies - AI powered journaling platform",
  "workspaces": [
    "apps/server",
    "apps/web"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "test:e2e": "pnpm --filter web test:e2e"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "stripe": "^20.0.0"
  }
}
